# Next.js Frontend Environment Configuration

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Development settings
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="Bangla Plagiarism Checker"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Features flags
NEXT_PUBLIC_ENABLE_OCR=true
NEXT_PUBLIC_ENABLE_BATCH_PROCESSING=true
NEXT_PUBLIC_ENABLE_CORPUS_MANAGEMENT=true

# File upload limits
NEXT_PUBLIC_MAX_FILE_SIZE=52428800
NEXT_PUBLIC_SUPPORTED_FORMATS=pdf

# UI Configuration
NEXT_PUBLIC_DEFAULT_LANGUAGE=bangla
NEXT_PUBLIC_THEME=light