# Example environment file
# Copy this to .env.local and modify as needed

# API Configuration - Backend server URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# App Configuration
NEXT_PUBLIC_APP_NAME="Bangla Plagiarism Checker"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Feature Flags
NEXT_PUBLIC_ENABLE_OCR=true
NEXT_PUBLIC_ENABLE_BATCH_PROCESSING=true
NEXT_PUBLIC_ENABLE_CORPUS_MANAGEMENT=true

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=52428800  # 50MB in bytes
NEXT_PUBLIC_SUPPORTED_FORMATS=pdf

# UI Settings
NEXT_PUBLIC_DEFAULT_LANGUAGE=bangla
NEXT_PUBLIC_THEME=light